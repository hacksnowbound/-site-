<style>
  html {
    --info-box-color: #2aa7e5;
    --color-bg: #3bb2ed;
    --footer-text-color: #00689c;
    --main-body-color: rgb(214, 246, 255);
  }
  .curve {
    position: absolute;
    height: 50%;
    width: 100%;
    bottom: 0;
    text-align: center;
  }

  .curve::before {
    content: "";
    display: block;
    border-radius: 100% 50%;
    width: 55%;
    height: 100%;
    background-color: var(--main-body-color);
    z-index: 0;
  }
  .infoBox {
    background-color: var(--info-box-color);
    box-shadow: 0px 6px #00689c;
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 30px;
    width: 80%;
    min-width: min-content;
    margin: 20px 0px;
    cursor: pointer;
    border-radius: 12px;
    padding: 15px 20px;
    transition: all 0.3s ease 0s;
    z-index: 1;
  }
  .infoBox:hover {
    box-shadow: 0px 10px #00689c;
    position: relative;
    transform: translateY(-4px);
  }
  .infoContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    flex-wrap: nowrap;
    padding: 20px;
  }
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  .listContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .titleContainer {
    padding-top: 10vh;
    padding-bottom: 10vh;
    background-color: var(--color-bg);
  }
  .sponsorfooter {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding-top: 50px;
  }

  footer {
    background-color: var(--main-body-color);
    color: var(--footer-text-color);
  }

  body {
    font-family: "Rowdies", sans-serif;
    --bs-body-font-size: 30px;
    color: white;
    background-color: var(--main-body-color);
  }

  main {
    margin: auto;
    padding: 1em;
    max-width: 150ch;
  }

  @keyframes hover {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
    100% {
      transform: translateY(0);
    }
  }
  .schedule-text {
    font-size: 25px;
    font-weight: normal;
  }
  .pushable {
    position: relative;
    border: none;
    background: transparent;
    padding: 0;
    cursor: pointer;
    outline-offset: 4px;
    transition: filter 250ms;
  }
  .shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    background: hsl(0deg 0% 0% / 0.25);
    will-change: transform;
    transform: translateY(2px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }
  .edge {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    background: #00abff;
  }
  .front {
    display: block;
    position: relative;
    padding: 12px 42px;
    border-radius: 12px;
    color: white;
    background: #66ccff;
    will-change: transform;
    transform: translateY(-4px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }
  .pushable:hover {
    filter: brightness(110%);
  }
  .pushable:hover .front {
    transform: translateY(-6px);
    transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
  }
  .pushable:active .front {
    transform: translateY(-2px);
    transition: transform 34ms;
  }
  .pushable:hover .shadow {
    transform: translateY(4px);
    transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
  }
  .pushable:active .shadow {
    transform: translateY(1px);
    transition: transform 34ms;
  }
  .pushable:focus:not(:focus-visible) {
    outline: none;
  }

  .info-box {
    margin-top: 20px;
    background-color: #66ccff;
    border-radius: 25px;
    box-shadow: 0px 8px #00abff;
    max-width: max-content;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    flex-direction: column;
    padding: 20px;
    /* center items */
    align-items: center;
    /*text-align: center;*/
  }

  ul {
    list-style-type: none;
    padding: 0;
    align-items: center;
    text-align: center;
    max-width: 100%;
    flex: auto;
  }

  ul > .scheduleEvent {
    margin-top: 10px;
    background: var(--color-list-item);
    border-radius: 10px;
    max-width: 90%;
    font-size: 25px;
    margin: auto;
    margin-top: 10px;
    text-align: left;
    box-shadow: 0px 6px #00689c;
    display: flex;
  }
  .scheduleEventTime {
    font-weight: normal;
    font-size: 25px;
    height: auto;
    padding: 8px;
    background: linear-gradient(
      0deg,
      rgb(102 204 255) 0%,
      rgb(127, 212, 255) 100%
    ); /*rgb(102 204 255);*/

    position: relative;
    left: 0px;
    width: 80px;
    border-radius: 10px 0px 0px 10px;
    margin-right: 10px;
  }
  .scheduleEventDescription {
    font-weight: normal;
    font-style: italic;
    text-align: center;
    align-items: center;
    justify-content: center;
    display: flex;
  }
  ul > li:hover {
    animation: shake 5s infinite;
  }

  .grid-content {
    margin: 15px;
  }

  .highlight,
  .hidark {
    border-radius: 8px;
    padding-left: 5px;
    padding-right: 5px;
  }

  .highlight {
    background-image: var(--astro-gradient);
    animation: pulse 3s ease-in-out infinite;
    background-size: 100% 200%;
    background-position-y: 100%;
  }

  .hidark {
    background-color: #1266aa;
  }

  /* for phone */
  @media screen and (max-width: 600px) {
    .infoBox {
      font-size: 20px;
      width: 100%;
      margin-left: 0px;
      margin-right: 0px;
    }
  }
</style>
